<h1>メッセージ 一覧</h1>
<%= link_to "投稿画面へ", new_message_path %>
<% @messages.each do |message| %>
  <p>
    <%= message.title %>
    <%= link_to '詳細', "/messages/#{message.id}", method: :get %>
    <%= link_to '編集', "/messages/#{message.id}/edit", method: :get %>
    <%= link_to '削除', "/messages/#{message.id}", method: :delete, data: {confirm: "削除しますか?"}  %>
  </p>
<% end %>